      <td><%=h place.copen.name %></td>
      <td><%= link_to "Mostrar", place %></td>
      <td><%= link_to "Editar", edit_place_path(place) %></td>
      <td><%= link_to "Eliminar", place, :confirm => 'EstÃ¡ seguro de que quiere destruir este sitio?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

