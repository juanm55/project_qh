<table>
  <tr>
    <th>Nombre</th>

  </tr>
  <% @cmoneys.each do |cmoney| %>
    <tr>
      <td><%=h cmoney.name %></td>
      <td><%= link_to ("Edit", edit_cmoney_path(cmoney))  if can?(:edit, cmoney)%></td>
      <td><%= link_to ("Destroy", cmoney, :confirm => 'Está seguro de que quiere destruir la categoría ' + cmoney.name.to_s, :method => :delete) if can?(:edit, cmoney) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to ("Crear nueva categoría", new_cmoney_path) if can?(:create, cmoney) %></p>
